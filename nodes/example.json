{
  "automatic": {
    "ipaddress": "0.0.0.0"
  },
  "run_list": [
    "recipe[scrapod]"
  ],
  "deploy": {
    "to": "/srv/scrapod"
  },
  "xvfb": {
    "user": "xvfb",
    "display": ":1",
    "screennum": "0",
    "dimensions": "1024x768x16"
  },
  "monit": {
    "system_name": "example",
    "processes": [
      { "name": "redis-server",   "pidfile": "/var/run/redis/redis-server.pid"                 },
      { "name": "scrapod-server", "pidfile": "/srv/scrapod/shared/tmp/pids/scrapod-server.pid" },
      { "name": "scrapod-web",    "pidfile": "/srv/scrapod/shared/tmp/pids/puma.pid"           }
    ]
  }
}
